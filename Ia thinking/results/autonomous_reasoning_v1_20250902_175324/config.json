{
  "model": {
    "input_dim": 64,
    "hidden_dim": 256,
    "max_reasoning_steps": 10,
    "dropout_rate": 0.1,
    "device": "cuda"
  },
  "training": {
    "learning_rate": 0.0001,
    "batch_size": 16,
    "max_epochs": 100,
    "patience": 10,
    "validation_split": 0.2,
    "initial_complexity": 1,
    "max_complexity": 5,
    "complexity_threshold": 0.65,
    "min_steps_per_level": 20,
    "min_accuracy_threshold": 0.1,
    "use_flexible_criteria": true,
    "consistency_weight": 0.8,
    "confidence_weight": 0.1,
    "validation_weight": 0.1,
    "save_every": 10
  },
  "problems": {
    "domains": [
      "math",
      "logic",
      "pattern"
    ],
    "complexity_range": [
      1,
      10
    ],
    "problems_per_complexity": 100,
    "validation_problems": 20
  },
  "experiment": {
    "experiment_name": "autonomous_reasoning_v1",
    "log_dir": "logs",
    "results_dir": "results",
    "tensorboard_enabled": true,
    "save_reasoning_traces": true,
    "metrics_to_track": [
      "accuracy",
      "consistency",
      "confidence",
      "reasoning_depth",
      "convergence_time"
    ]
  },
  "random_seed": 42,
  "log_level": "INFO",
  "use_mixed_precision": true,
  "compile_model": false
}